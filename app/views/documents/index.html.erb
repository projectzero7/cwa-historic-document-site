<p id="notice"><%= notice %></p>

<h1>Documents</h1>

<table class='table table-striped table-bordered'>
  <thead>
    <tr>
      <th>Project ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.project_id %></td>
        <td class='center'><%= link_to 'Show', document, :class => 'btn btn-default' %></td>
        <% if logged_in? %>
        <td class='center'><%= link_to 'Edit', edit_document_path(document), :class => 'btn btn-default' %></td>
        <td class='center'><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if logged_in? %>
  <%= link_to 'New Document', new_document_path, :class => 'btn btn-default' %>
<% end %>
